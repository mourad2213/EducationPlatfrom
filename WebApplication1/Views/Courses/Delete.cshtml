@model WebApplication1.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<h2>Delete Course</h2>

<p>Are you sure you want to delete the course "<strong>@Model.CourseTitle</strong>"?</p>

<form asp-action="Delete" asp-route-id="@Model.CourseId" method="post">
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("Index", "Courses")" class="btn btn-secondary">Cancel</a>
</form>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
